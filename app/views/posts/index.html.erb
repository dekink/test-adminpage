<div class="col-md-12 text-center">
  <div style="margin:100px; background-color:pink;"> 
  <div class="notice">
    <p id="notice"><%= notice %></p>
    <!-- 현재 유저의 이메일 띄우기-->
    <% if user_signed_in? %>
      <p><%= current_user.email %></p>
      <p><%= button_to "logout", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %></p>
      <p><%= current_user.roles.map(&:name).join(',').titleize %></p>
      <% if current_user.roles.map(&:name).join(',') == 'admin'%>
       <%= link_to "AdminPage", '/tbs2/admin2' %>
       <% end %>
    <% else %>
  
      
      <p><%= link_to "login", new_user_session_path %></p>
         <!-- <a href="/users/sign_out">login</a>-->
    <% end %>
  </div>
  <div style="padding:20px;">
    <h1>Memo</h1>
  </div>
  <div class="table" style="padding:50px;">
    <table style="width:100%;margin:15px 0;border:0;">
      <thead>
        <tr style="border: 1px solid #ffffff;padding:15px;">
          <th style="padding:15px;text-align:center;">Title</th>
          <th style="padding:15px;text-align:center;">User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody style="padding:20px;">
        <% @posts.each do |post| %>
          <tr style="border: 1px solid #ffffff;padding:15px;border-width:1px 0 1px 0;">
            <td style="border-collapse:collapse;padding:15px;"><%= post.title %></td>
            <td style="border-collapse:collapse;padding:15px;"><%= post.user.email %></td>
            <td style="border-collapse:collapse;padding:15px;"><%= link_to 'Show', post %></td>
            <% if user_signed_in? %>
            <td style="border-collapse:collapse;padding:15px;"><%= link_to 'edit', edit_post_path(post) if post.updatable_by? current_user %></td>
            <td style="border-collapse:collapse;padding:15px;"><%= link_to 'trash', post, method: :delete, data: { confirm: 'Are you sure?' } if post.deletable_by? current_user %></td>
            <% end %>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>

<%= link_to 'New Post', new_post_path %>
</div>
</div>